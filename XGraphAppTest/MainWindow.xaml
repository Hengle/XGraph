<Window x:Class="XGraphTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:XGraph.Controls;assembly=XGraph"
        Title="MainWindow" Height="500" Width="600" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="3" Visibility="Collapsed">
            <Button Content="Delete" Click="Delete_Button_Click" />
        </StackPanel>
        <controls:GraphView x:Name="GraphView" ItemsSource="{Binding Items}" Grid.Row="1" />
    </Grid>
</Window>
